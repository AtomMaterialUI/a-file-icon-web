{
  "author": "Elior Boukhobza (mallowigi)",
  "action": {
    "default_icon": "icon128.png",
    "default_title": "Atom File Icons"
  },
  "content_scripts": [
    {
      "css": [
        "public/global.css"
      ],
      "matches": [
        "http://github.com/*",
        "https://github.com/*",
        "http://bitbucket.org/*",
        "https://bitbucket.org/*",
        "http://gitlab.com/*",
        "https://gitlab.com/*",
        "http://gitee.com/*",
        "https://gitee.com/*"
      ]
    }
  ],
  "description": "Changes GitHub, GitLab, Gitee and BitBucket file icons according to their extension or framework",
  "homepage_url": "https://www.material-theme.com",
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png"
  },
  "manifest_version": 3,
  "name": "Atom File Icons Web",
  "host_permissions": [
    "http://github.com/*",
    "https://github.com/*",
    "http://bitbucket.org/*",
    "https://bitbucket.org/*",
    "http://gitlab.com/*",
    "https://gitlab.com/*",
    "http://gitee.com/*",
    "https://gitee.com/*"
  ],
  "short_name": "Atom File Icons Web",
  "version": "14.0.0",
  "web_accessible_resources": [
    {
      "resources": [
        "public/icons/**/*"
      ],
      "matches": [
        "http://github.com/*",
        "https://github.com/*",
        "http://bitbucket.org/*",
        "https://bitbucket.org/*",
        "http://gitlab.com/*",
        "https://gitlab.com/*",
        "http://gitee.com/*",
        "https://gitee.com/*"
      ]
    }
  ]
}
